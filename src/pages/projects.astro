---
import BaseLayout from '../layouts/BaseLayout.astro'
import TopLayout from '../layouts/TopLayout.astro'
import BottomLayout from '../layouts/BottomLayout.astro'

import { PROJECTS, PROJECTPAGE } from '../lib/constants'
import { Button } from '@/components/ui/button'
import { ChevronLeft } from 'lucide-react'
---

<BaseLayout title={PROJECTPAGE.TITLE} description={PROJECTPAGE.DESCRIPTION}>
  <main class="flex min-h-[80vh] flex-auto flex-col" transition:animate="fade">
    <TopLayout>
      <h2
        class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0"
      >
        <a href="/" class="mr-2 text-primary">
          <Button variant="default" size="icon">
            <ChevronLeft />
          </Button>
        </a>
        {PROJECTPAGE.TITLE}
      </h2>
    </TopLayout>
    <BottomLayout>
      <ul>
        {
          PROJECTS.map((entry) => (
            <li class="animate mt-4 border-b border-black/10 py-8 first-of-type:mt-0 first-of-type:pt-0 last-of-type:border-none dark:border-white/25">
              <a
                href={entry.link ?? ''}
                class="mb-2 text-lg font-semibold text-primary"
              >
                {/* a class ^^^ class={`font-semibold ${entry?.link ? 'text-primary' : 'text-foreground'}`} */}
                {entry.title}
              </a>
              <div class="text-sm font-semibold">{entry.description}</div>
              {/* <article class="prose dark:prose-invert">
                {entry.tasks.map((i) => (
                  <>{i}</>
                ))}
              </article> */}
            </li>
          ))
        }
      </ul>
    </BottomLayout>
  </main>
</BaseLayout>
