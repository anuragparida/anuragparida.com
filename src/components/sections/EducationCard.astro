---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { EDUCATION } from '../../lib/constants'
---

<Card colSpan="md:col-span-2" rowSpan="md:row-span-1" title="Education">
  <div class="mt-2 space-y-4">
    {
      EDUCATION.slice(0, 3).map((study) => (
        <div>
          <h3 class="text-lg font-semibold">{study.title}</h3>
          <a class="text-sm text-primary" href={study.link ?? ''}>
            {study.institution}
          </a>
          <p class="text-sm text-gray-600">{study.date}</p>
        </div>
      ))
    }
  </div>
</Card>
