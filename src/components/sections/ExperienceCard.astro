---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { EXPERIENCE } from '../../lib/constants'
import { ExternalLink } from 'lucide-react'
---

<Card colSpan="md:col-span-2" rowSpan="md:row-span-2" title="Experience">
  <div class="mt-2 space-y-4">
    {
      EXPERIENCE.map((exp) => (
        <div>
          <h3 class="text-lg font-semibold">{exp.position}</h3>
          <a class="text-sm text-primary" href={exp?.link ?? ''}>
            {exp.company}
          </a>{' '}
          <p class="text-sm font-light">{exp.description}</p>
          <p class="text-sm text-gray-600">
            {exp.location}, {exp.start} - {exp.end}
          </p>
        </div>
      ))
    }
    <a href="/work">
      <Button variant="link" className="mt-2 pl-0"
        ><ExternalLink /><span class="ml-2">View More</span>
      </Button>
    </a>
  </div>
</Card>
